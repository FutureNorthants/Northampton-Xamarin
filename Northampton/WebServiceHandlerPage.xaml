<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="Northampton.WebServiceHandlerPage" Title="{Binding PageTitle}" Style="{StaticResource pageStyle}">
    <ContentPage.Content>
        <AbsoluteLayout>
                <Label AbsoluteLayout.LayoutBounds="0.5, 0.30, -1, -1" AbsoluteLayout.LayoutFlags="PositionProportional" HorizontalOptions="Center" HorizontalTextAlignment="Center" Margin="5">
                <Label.FormattedText>
                    <FormattedString>
                        <Span Text="{Binding PageDescription}" TextColor="Black" Font="Bold, 20" />
                    </FormattedString>
                </Label.FormattedText>
            </Label>
            <ActivityIndicator x:Name="actInd" Scale="2" AbsoluteLayout.LayoutFlags="PositionProportional" AbsoluteLayout.LayoutBounds="0.5,0.5,-1,-1" IsRunning="true" IsVisible="true" />
        </AbsoluteLayout>
    </ContentPage.Content>
</ContentPage>